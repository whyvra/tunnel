@using System.Net
[Interface]
Address = @GetFirstUsage(Server.AssignedRange)
ListenPort = @Server.ListenPort
PrivateKey = @((MarkupString) "<SERVER PRIVATE KEY>")

PostUp = iptables -A FORWARD -i %i -j ACCEPT; iptables -t nat -A POSTROUTING -o eth0 -j MAS>
PostDown = iptables -D FORWARD -i %i -j ACCEPT; iptables -t nat -D POSTROUTING -o eth0 -j M>

@foreach (var client in Clients)
{
@((MarkupString) GetPeer(client))
}
@code
{
    [Parameter]
    public IEnumerable<ClientDto> Clients { get; set; }
    [Parameter]
    public ServerDto Server { get; set; }

    private string GetFirstUsage(string ipRange)
    {
        var network = IPNetwork.Parse(ipRange);
        return network.FirstUsable.ToString();
    }

    private string GetPeer(ClientDto client)
    {
        return $@"# {client.Name}
# {client.Description}
[Peer]
PublicKey = {client.PublicKey}
AllowedIPs = {client.AssignedIp}

";
    }
}